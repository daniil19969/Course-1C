
Процедура ОбработкаПроведения(Отказ, Режим)
	
	Движения.ГрафикРаботы.Записывать = Истина;
	
	Пока ДатаНачала<=ДатаОкончания Цикл
		Движение = Движения.ГрафикРаботы.Добавить();
		Движение.Дата = ДатаНачала;
		Если ДеньНедели(ДатаНачала)<6 Тогда
			Движение.РабочийДень = 1;
		Иначе
			Движение.РабочийДень = 0;
		КонецЕсли;
		ДатаНачала=ДатаНачала+24*3600;
	КонецЦикла;
	
КонецПроцедуры
